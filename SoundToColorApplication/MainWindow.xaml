<Window x:Class="SoundToColorApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:userControls="clr-namespace:SoundToColorApplication"
        Title="MainWindow" Height="350" Width="525" WindowState="Maximized"
        x:Name="ThisControl">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid x:Name="MainGrid" Grid.ColumnSpan="2"/>
        <StackPanel Orientation="Vertical" Background="Transparent" Width="200">
            <Button x:Name="DeviceButton" Height="30"/>
            <ToggleButton x:Name="PlaybackButton" Click="HandlePlaybackButtonClicked" Height="30">Playback</ToggleButton>
        </StackPanel>
    </Grid>
</Window>
